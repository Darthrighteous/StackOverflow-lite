{
	"extends": "airbnb-base",
	"rules": {
		"max-len": [1, 80, 2, {
			ignoreUrls: true,
			ignoreComments: false,
			ignoreRegExpLiterals: true,
			ignoreStrings: true,
			ignoreTemplateLiterals: true,
	    }],
	    "require-jsdoc": ["error", {
	        "require": {
	            "FunctionDeclaration": true,
	            "MethodDefinition": true,
	            "ClassDeclaration": true,
	            "ArrowFunctionExpression": true,
	            "FunctionExpression": true
        	}
    	}],
    	"valid-jsdoc": ["error", {
			"prefer": { 
				"arg": "param",
				"argument": "param",
				"class": "constructor",
				"return": "returns",
				"virtual": "abstract" 
			}
		}]
	}
}
